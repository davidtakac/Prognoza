<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.Prognoza.Widget"
    tools:layout_height="110dp"
    tools:layout_width="110dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            tools:src="@drawable/rain" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:textColor="?attr/widgetTextPrimaryColor"
            android:textSize="20sp"
            tools:text="180°" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/widgetTextSecondaryColor"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        tools:text="Osijek"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_feels_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/widgetTextSecondaryColor"
        android:textSize="12sp"
        tools:text="Feels like 225°"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>